;-
    全局唯一名支持
-;


;; 在宏内部使用全局唯一名称

let uqVarName(N)(
	uvnnew _            ; 定义全局唯一名，通过 _ 符号标识
	var uvnget _ N      ; 取得 _ 标识的全局唯一名
	putchar uvnget _    ; 打印全局唯一变量
	uvndel _            ; 删除全局唯一变量
	uvnclear            ; 清空所有全局唯一变量
)


;; 调用使用全局唯一变量的宏

uqVarName 97
uqVarName 98
uqVarName 99
uqVarName 100














