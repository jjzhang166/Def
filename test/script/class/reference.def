;-
	类引用型布局
-;

include "../macro/std.def"

;; 类成员包含引用类型
type QNode (
	refer QNode self ; 引用成员
	Int num
	refer QNode other ; 引用成员
	fun QNode(Int n)(
		set num n
	)
)


;; 初始化
nd := QNode 97
nd2 := QNode 99


;; 引用自己 和 其它节点
nd.self = nd
nd.other = nd2


;; 获得自己 和 其它节点 （如未初始化会报错）
;; 必须加括号，否则会有优先级问题
nd_self := (nd.self)
nd_other := (nd.other)


;; 打印
putchar nd_self.num
putchar nd_other.num

